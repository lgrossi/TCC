<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.goulartgrossi.lucas.appaem.fragment.IMDetailFragment"
    android:id="@+id/DetailScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentRight="true"
    android:scrollbars="vertical"
    android:fillViewport="true"
    android:scrollbarSize="4dp">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="30px"
            android:textColor="@android:color/black"
            android:textSize="10pt"
            android:text="Máquina de Teste ABC" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35px"
            android:layout_marginTop="35px"
            android:textColor="@android:color/black"
            android:textSize="9pt"
            android:text="General Info" />


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/border"
            android:layout_margin="30px">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="30px">

            <TextView
                android:gravity="left"
                android:layout_margin="8px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="8pt"
                android:text="Manufacturer " />

            <TextView
                android:gravity="right"
                android:layout_margin="8px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="8pt"
                android:layout_weight="1"
                android:text="General Electric"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="30px">

                <TextView
                    android:gravity="left"
                    android:layout_margin="8px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="8pt"
                    android:text="Model " />

                <TextView
                    android:gravity="right"
                    android:layout_margin="8px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="8pt"
                    android:layout_weight="1"
                    android:text="BCX-LUV-60-00-HZ"/>
            </LinearLayout>
            <TextView
                android:gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:layout_marginLeft="30px"
                android:layout_marginTop="30px"
                android:textSize="8pt"
                android:text="Description" />

            <TextView
                android:gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_marginBottom="30px"
                android:textSize="8pt"
                android:text="Olá, essa é a descrição feita para testar o layour de detalhe de máquinas de indução." />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/border"
            android:layout_margin="30px">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10px"
                android:layout_marginRight="20px"
                android:layout_marginLeft="20px">

                <TextView
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="8pt"
                    android:layout_weight="1"
                    android:text="Poles" />

                <TextView
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="8pt"
                    android:layout_weight="1"
                    android:text="Frequency" />

                <TextView
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="8pt"
                    android:layout_weight="1"
                    android:text="Xm" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10px"
                android:layout_marginRight="20px"
                android:layout_marginLeft="20px">

                <TextView
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="8pt"
                    android:layout_weight="0.3125"
                    android:text="4"/>

                <TextView
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="8pt"
                    android:layout_weight="0.5625"
                    android:text="60 Hz"/>

                <TextView
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="8pt"
                    android:layout_weight="0.125"
                    android:text="1.67 Ω"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
tools:context="com.goulartgrossi.lucas.appaem.fragment.DefineEquivalentCircuitFragment"
android:id="@+id/DetailScrollView"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:layout_alignParentBottom="true"
android:layout_alignParentLeft="true"
android:layout_alignParentRight="true"
android:scrollbars="vertical"
android:fillViewport="true"
android:scrollbarSize="4dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="30px">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:textSize="10pt"
            android:text="Insert Circuits"/>

        <LinearLayout
            android:id="@+id/insertCircuit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="30px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="8pt"
                android:text="Phase Voltage (V):"/>
            <EditText
                android:id="@+id/defineV1"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:inputType="number"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="8pt"
                android:text="Stator Resistance (Ω):"/>
            <EditText
                android:id="@+id/defineR1"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:inputType="number"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="8pt"
                android:text="Stator Reactance (Ω):"/>
            <EditText
                android:id="@+id/defineX1"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:inputType="number"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="8pt"
                android:text="Rotor Resistance (Ω):"/>
            <EditText
                android:id="@+id/defineR2"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:inputType="number"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="8pt"
                android:text="Rotor Reactance (Ω):"/>
            <EditText
                android:id="@+id/defineX2"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:inputType="number"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="8pt"
                android:text="Magnetic Reactance (Ω):"/>
            <EditText
                android:id="@+id/defineXm"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:inputType="number"/>
        </LinearLayout>

        <Button
            android:id="@+id/defineCircuitBtn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10pt"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/colorPrimary"
            android:text="Define Circuits"
            android:layout_centerInParent="true"
            android:onClick="setEquivalentCircuit"/>
    </LinearLayout>
</ScrollView>